
@{
    ViewBag.Title = "完善手机";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="banner eld_item">
    @Html.Action("AdList", "Partial", new { code = "index_banner" })
</div>
<div class="main">
    <div class="pg_sec2 pg_sec7">
        <dl>
            <dd>
                <span>手机号</span>
                <input type="text" value="" v-model="model.mobile" placeholder="请输入手机号">
            </dd>
            <dd style="">
                <span>验证码</span>
                <input type="text" value="" v-model="model.nickname" placeholder="请输入验证码" style="width: 57%;">
                <a href="javascript:void(0);" class="btn" v-if="itvTm<=0" v-on:click="getCode">获取验证码</a>
                <a href="javascript:void(0);" class="btn1" v-if="itvTm>0">等待(<span v-text="itvTm">0</span>)秒</a>
            </dd>
        </dl>
    </div>
    <div class="pg_sec8 pg_sec10">
        <a v-on:click="post" class="btn">提交</a>
    </div>
</div>
@Html.Partial("_Footer")
<script>
    var _url = '@ViewBag.Url';
</script>
@Scripts.Render("/Scripts/User/Mobile.js")

