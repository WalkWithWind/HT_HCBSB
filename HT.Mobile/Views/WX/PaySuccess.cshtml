@{
    Layout =null;
}
<!DOCTYPE html>
<html>
<head>
    <title>支付成功</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <link href="/Content/weui.css" rel="stylesheet" />
</head>
<body>
    <div class="page msg_success js_show">
        <div class="weui-msg">
            <div class="weui-msg__icon-area"><i class="weui-icon-success weui-icon_msg"></i></div>
            <div class="weui-msg__text-area">
                <h2 class="weui-msg__title">支付成功</h2>
                <p class="weui-msg__desc">您的订单:<label style="font-weight:bold;font-size:12px;">@(ViewBag.OrderNo)</label></br>已经成功支付!</p>
            </div>
            <div class="weui-msg__opr-area">
                <p class="weui-btn-area">
                    <a href="/User/Issue" class="weui-btn weui-btn_primary">查看订单</a>
                    <a href="javascript:history.back();" class="weui-btn weui-btn_default">返回</a>
                </p>
            </div>
            <div class="weui-msg__extra-area">
                <div class="weui-footer">
                    <p class="weui-footer__links">
                    </p>
                    <p class="weui-footer__text">Copyright © 2018-2019 </p>
                </div>
            </div>
        </div>
    </div>

</body>

</html>



