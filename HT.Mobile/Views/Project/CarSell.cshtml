
@{
    ViewBag.Title = "出售信息";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_Header")
<div class="main">
    <div class="el_top">
        <div class="wrapper">
            <ul class="el_top_ul">
                <li><a class="start_city" v-on:click="showCity()"><span v-text="(searchKey.start_city==''?'地区':searchKey.start_city)">地区</span><i></i></a></li>
                <li><a class="car_length" v-on:click="showCarStyle()"><span v-text="(searchKey.car_style==''?'车型':searchKey.car_style)">车型</span><i></i></a></li>
                <li><a class="use_type" v-on:click="showUseType()"><span v-text="(searchKey.use_type==''?'品牌':searchKey.use_type)">品牌</span><i></i></a></li>
                <li><a class="more" v-on:click="showCarLength()"><span>更多</span><i></i></a></li>
            </ul>
        </div>
    </div>
    <ul class="ind_sec1_ul">
        <li v-for="item in listData.list">
            <list-component v-bind:item="item" v-if="item"></list-component>
        </li>
    </ul>
    <div class="clearfix"></div>
    <div class="start_box zhx_box tab-box hide">
        <ul class="zhx_box_title tab-title">
            <li v-bind:class="[{'active':select.startProvinceTab==0}]"
                v-on:click="selectTabProvince('start')">
                <a href="javascript:;">省</a>
            </li>
            <li v-bind:class="[{'active':select.startProvinceTab==1}]"
                v-on:click="selectTabCity('start')">
                <a href="javascript:;">市</a>
            </li>
            <li v-bind:class="[{'active':select.startProvinceTab==2}]"
                v-on:click="selectTabDistrict('start')">
                <a href="javascript:;">区</a>
            </li>
        </ul>
        <div v-bind:class="['province','clearfix','tab-content',{'hide':select.startProvinceTab!=0}]">
            <a href="javascript:;" v-for="item in cityData.get(0)"
               v-bind:class="[{ 'active': item==searchKey.start_province }]"
               v-text="item" v-on:click="selectProvince('start',item)">
            </a>
        </div>
        <div v-bind:class="['city','clearfix','tab-content',{'hide':select.startProvinceTab!=1}]"
             v-if="searchKey.start_province!=''">
            <a href="javascript:;" v-for="item in cityData.getCitysByProvince(searchKey.start_province)"
               v-bind:class="[{ 'active':item==searchKey.start_city }]"
               v-text="item" v-on:click="selectCity('start',item)">
            </a>
        </div>
        <div v-bind:class="['district','clearfix','tab-content',{'hide':select.startProvinceTab!=2}]"
             v-if="searchKey.start_city!=''">
            <a href="javascript:;" v-for="item in cityData.getDistricts(searchKey.start_province,searchKey.start_city)"
               v-bind:class="[{ 'active':item==searchKey.start_district }]"
               v-text="item" v-on:click="selectDistrict('start',item)">
            </a>
        </div>
        <div class="sub_btn_box">
            <a href="javascript:void(0);" class="cancle" v-on:click="resetCity('start')">重置</a>
            <a href="javascript:void(0);" class="confirm" v-on:click="confirm()">确定</a>
        </div>
    </div>
    <div class="use_type_box zhp_box hide">
        <div class="cty_box">
            <a href="javascript:;" v-bind:class="[{ 'cur':searchKey.use_type=='' }]"
               v-on:click="searchKey.use_type=''">不限</a>
            <a href="javascript:;" v-for="item in useTypeData"
               v-bind:class="[{ 'cur': item.title==searchKey.use_type }]"
               v-text="item.title" v-on:click="searchKey.use_type=item.title"></a>
        </div>
        <div class="sub_btn_box">
            <a href="javascript:void(0);" class="cancle" v-on:click="searchKey.use_type=''">重置</a>
            <a href="javascript:void(0);" class="confirm" v-on:click="confirm()">确定</a>
        </div>
    </div>
    <div class="car_style_box zhj_box hide">
        <div class="cty_box">
            <a href="javascript:;" v-bind:class="[{ 'cur':searchKey.car_style=='' }]"
               v-on:click="searchKey.car_style=''">不限</a>
            <a href="javascript:;" v-for="item in carStyleData"
               v-bind:class="[{ 'cur': item.title==searchKey.car_style }]"
               v-text="item.title" v-on:click="searchKey.car_style=item.title"></a>
        </div>
        <div class="sub_btn_box">
            <a href="javascript:void(0);" class="cancle"
               v-on:click="searchKey.car_style='';">重置</a>
            <a href="javascript:void(0);" class="confirm" v-on:click="confirm()">确定</a>
        </div>
    </div>
    <div class="car_length_box zhp_box hide">
        <div class="cty_box">
            <p>排放标准</p>
            <a href="javascript:;" v-bind:class="[{ 'cur':searchKey.car_length=='' }]"
               v-on:click="searchKey.car_length=''">不限</a>
            <a href="javascript:;" v-for="item in carLengthData"
               v-bind:class="[{ 'cur': item.title==searchKey.car_length }]"
               v-text="item.title" v-on:click="searchKey.car_length=item.title"></a>
        </div>
        <div class="cty_box">
            <p>车辆户型</p>
            <a href="javascript:;" v-bind:class="[{ 'cur':searchKey.goods_type=='' }]"
               v-on:click="searchKey.goods_type=''">不限</a>
            <a href="javascript:;"
               v-bind:class="[{ 'cur': '公司户'==searchKey.goods_type }]"
               v-text="'公司户'" v-on:click="searchKey.goods_type='公司户'"></a>
            <a href="javascript:;"
               v-bind:class="[{ 'cur': '个人户'==searchKey.goods_type }]"
               v-text="'个人户'" v-on:click="searchKey.goods_type='个人户'"></a>
        </div>
        <div class="sub_btn_box">
            <a href="javascript:void(0);" class="cancle" v-on:click="searchKey.car_length='';searchKey.goods_type='';">重置</a>
            <a href="javascript:void(0);" class="confirm" v-on:click="confirm()">确定</a>
        </div>
    </div>
</div>
@Html.Partial("_Footer")
@section scripts{
    @Html.Action("Template", "Partial", new { id = "List" })
    @Html.Partial("_CityJs")
    @Scripts.Render("/Scripts/Project/CarSell.js")
}

