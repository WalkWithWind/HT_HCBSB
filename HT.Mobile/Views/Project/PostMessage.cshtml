@section scripts{

    <script type="text/javascript">
        var messageBox = new Vue({
            el: '.message_box',
            data: {
                isLoading: false,
                contents: ''
            },
            methods: {
                init: function () {
                    this.loadData();
                },
                
                release: function () {
                    var _this = this;
                    layer.open({
                        type: 1,
                        title: '发布须知',
                        content: _this.contents,
                        offset: 'lb',
                        area: ['100%', '100%'],
                        shade: 0.5,
                        scrollbar: false,
                        anim: 2
                    });
                    $('.layui-layer-title').css('height', '1rem');
                    $('.layui-layer-title').css('line-height', '1rem');
                    $('.layui-layer-title').css('text-align', 'center');
                    $('.layui-layer-title').css('padding', '0px');
                    $('.layui-layer-title').css('background-color','#fdcf24');
                    //$('.layui-layer-setwin').css('display', 'none');
                    $('.layui-layer-content').css('padding','8px');
                },

                loadData: function () {
                    var _this = this;
                    var reqData = {
                        id: 1
                    };
                    $.ajax({
                        type: 'post',
                        url: '/Project/BaseHelpDetails',
                        data: reqData,
                        dataType: 'json',
                        success: function (resp) {
                            _this.isLoading = false;

                            if (resp.status) {
                                _this.contents = resp.result.contents;
                                console.log('_this.contents', _this.contents);
                            }
                        }
                    });
                }
            }
        });
        messageBox.init();


    </script>
}